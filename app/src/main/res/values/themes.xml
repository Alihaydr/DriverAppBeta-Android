<!--        <item name="windowNoTitle">true</item>-->
<!--    </style>-->

    <style name="Theme.TaxiClientByAliAndroid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.TaxiClientByAliAndroid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>